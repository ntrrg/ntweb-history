<nav>
  <strong>
    <a href="{{ .Site.Home.Permalink }}">{{ .Site.Params.name }}</a>
  </strong>

  {{ .Scratch.Set "menuItems" "menu" }}
  {{ partial "menu-items.tmpl" . }}

  <div id="secondaryMenu">
    {{ with $.Site.GetPage "/search" }}
      <label class="navbar-search" title="{{ .Title }}">
        <form method="GET" action="{{ .Permalink }}">
          [<input name="q" type="search"
                  placeholder="{{ .Title }}..."/><button>
            {{ readFile "/static/images/fa/search.svg" | safeHTML }}</button>]
        </form>
      </label>
    {{ end }}

    {{ .Scratch.Set "menuItems" "secundaryMenu" }}
    {{ partial "menu-items.tmpl" . }}
  </div>
</nav>

